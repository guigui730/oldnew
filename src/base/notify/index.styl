
.notify-wrapper {
    position: fixed;
    content: '';
    z-index:10001;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    touch-action: none;
    .notify-mask {
        position: absolute;
        left:0;top:0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
    }
}

// message
.notify-wrapper {
    .notify-msg {
        position: relative;
        display: inline-block;
        color: #FFF;
        padding: 0.2rem;
        border-radius: 0.1rem;
        background-color: rgba(0, 0, 0, 0.7);
        max-width: 6rem;
        .icon {
            margin: 0.1rem auto;
            width: 0.64rem;
            height: 0.64rem;
            background-size: auto 100%;
        }
        &.skin-default {
            color: #333;
            border: 0.02rem solid #D0D0D0;
            background-color: rgba(255, 255, 255, 0.8);
        }
        &.skin-success{
            .icon{
                background-image:url("./assets/success.svg");
            }
        }
        &.skin-warning{
            .icon{
                background-image:url("./assets/warning.svg");
            }
        }
        &.skin-error{
            .icon{
                background-image:url("./assets/error.svg");
            }
        }
    }
}

// alert
.notify-wrapper {
    .notify-alert {
        position: relative;
        width: 5.4rem;
        border-radius: 0.14rem;
        overflow: hidden
        background-color: #FFF;
        .notify-title {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            color: #FFF;
            padding: 0.1rem 0.2rem;
            background-color: #4E8CEE;
            .close {
                position: relative;
                width: 0.3rem;
                height: 0.3rem;
                &:before, &:after {
                    position: absolute;
                    content: '';
                    height: 100%;
                    left: 0.14rem;
                    top: 0;
                    border-left: 0.01rem solid #FFF;
                }
                &:before {
                    transform: rotate(-45deg);
                }
                &:after {
                    transform: rotate(45deg);
                }
            }
        }
        .notify-tbody {
            padding: 0.5rem 0.3rem;
            text-align: center;
            font-size: 0.28rem;
            line-height: 1.5;
            font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
            color: #333333;
        }
        .notify-footer {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            border-top: 0.01rem solid #E0E0E0;
            .ft-cancle, .ft-close {
                flex: 1;
                text-align: center;
                padding: 0.2rem 0;
                font-size: 0.32rem;
                color:#888;
            }
            .ft-cancle + .ft-close{
                border-left: 0.01rem solid #E0E0E0;
            }
            .ft-close {
                color: #108EE9;
            }
        }
    }
}
