.top {
    width: 100%;
    height: 7.2rem;  
    z-index: 100;
    overflow: hidden;
}
.wrapper {
    padding:0 0.3rem;
    margin-bottom: 0.2rem;
}
.wrapper .container {
    background-color: #fff;
    border-radius: 4px;
    overflow: hidden;
}

.wrapper header {
    font-size: 0.34rem;
    font-family: 'SourceHanSansCN Bold';
    font-weight: 600;
    text-align: center;
    margin-bottom: 0.4rem;
}

.wrapper header .row {
    display: inline-block;
    width: 0.4rem;
    height: 0.06rem;
    margin-bottom: 0.08rem;
    border-radius: 0.2rem;
    transform:rotate(-45deg);
    -ms-transform:rotate(-45deg); 	/* IE 9 */
    -moz-transform:rotate(-45deg); 	/* Firefox */
    -webkit-transform:rotate(-45deg); /* Safari å’Œ Chrome */
    -o-transform:rotate(-45deg); 	
}

.wrapper header .yellow {
    background: linear-gradient(to right,#f7aa59 0%,#f4cf6b 100%);
}

.wrapper header .red {
    background: linear-gradient(to right,#ed2818 0%,#f75053 100%);
}
.wrapper .displayflex {
    display: flex;
}
.wrapper .displayflex li {
    flex: 1;
    text-align: center;
    vertical-align: middle;
}
.wrapper .displayflex li img {
    width: 1rem;
    height: 1rem;
    margin-bottom: 0.15rem;
}
.wrapper .displayflex li p {
    font-size: 0.24rem;
    font-weight: bold;
}
.wrapper .container .text {
    text-indent:2em;
    font-family: SourceHanSansCN Regular;
    font-size: 0.28rem;
    text-align: justify;
    line-height: 1.5;
}
.container-wrapper {
    position: relative;
}
.line-lists .line1 {
    position: absolute;
    left: 1.32rem;
    top: 0.5rem;
}
.line-lists .line2 {
    position: absolute;
    left: 2.85rem;
    top: 0.5rem;
}
.line-lists .line3 {
    position: absolute;
    left: 4.4rem;
    top: 0.5rem;
}
.container .line-lists li {
    display: inline-block;
    width: 0.45rem;
    height: 1px;
}
.term-lists {
    display: flex;
}
.term-lists li {
    flex: 1;
    height: 1.8rem;
    margin-right: 0.3rem;
    text-align: center
}
.term-lists .money {
    display: flex;
    box-sizing: border-box;
    padding: .2rem 0 0.1rem 0;
    flex-direction: column;
}
.term-lists .monthlist {
    display: flex;
    box-sizing: border-box;
    padding: .12rem 0 0.1rem 0;
    flex-direction: column;
}
.clm-line {
    flex: 1;
    margin-right:0.9rem; 
    margin-bottom: 0.05rem;
    border-right: 2px solid  #4e3637;
}
.monthlist p ,.money p {
    flex: 1;   
}
.term-lists li .wrap {
    height: 1.35rem;
    font-size: 0.28rem;    
    font-family: SourceHanSansCN Regular;
}
.term-lists li .wrap .red {
    color: #fd3c2a;
}
.term-lists li .wrap .blue {
    color: #2dcff7;
}
.term-lists li .wrap span {
    font-weight: bold;
}
.term-lists .lineheight {
    line-height: 1.35rem;
}
.term-lists li .item {
    height: 0.45rem;
    line-height: 0.45rem;
    font-size: 0.24rem;
    font-family: SourceHanSansCN Regular;
    color: #fff;
}

.wrapper .container .list {
    font-family: SourceHanSansCN Regular;
    font-size: 0.28rem;
    line-height: 1.5;
    text-align:justify;
}

footer {    
    padding:0.6rem 0.3rem;
}

footer button {
    width: 100%;
    height: 0.86rem;
    color: #fff;
    font-size: 0.32rem;
    font-family: SourceHanSansCN Medium;
    border: none;
    border-radius: 0.4rem;
    outline: none;
}

.offsetrighr {
    margin-right: -0.2rem;
}

.offsetleft {
    margin-left: -0.2rem;
}